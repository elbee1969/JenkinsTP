pipeline {
  agent any

  stages {
    def app

    stage('Construction de l'application') {
      steps {
        script {
           echo 'This whole pipeline will take ~20sec to finish.'
           app = docker.build("atos06/ipiformation")
        }
      }
    }

    stage('Parallel stages') {
      parallel {

        stage('Stage 2') {
          steps {
            script {
              sh 'sleep 20'
            }
          }
        }

        stage('Stage 3') {
          steps {
            script {
              sh 'sleep 20'
            }
          }
        }

      }
    }

  }
}
