pipeline {
  agent any
  
  stages {

    stage('Stage 1') {
      steps {
        script {
          sh `docker build -t atos06/ipiformation .` 
        }
      }
    }

    stage('Parallel stages') {
      parallel {

        stage('Stage 2') {
          steps {
            script {
              sh 'sleep 20'
            }
          }
        }

        stage('Stage 3') {
          steps {
            script {
              sh 'sleep 20'
            }
          }
        }

      }
    }

  }
}
