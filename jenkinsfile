pipeline {
  agent any
   def app

  stages {

    stage('Construction de l'application') {
      steps {
        script {
           app = docker.build("atos06/ipiformation")
        }
      }
    }

    stage('Parallel stages') {
      parallel {

        stage('Stage 2') {
          steps {
            script {
              sh 'sleep 20'
            }
          }
        }

        stage('Stage 3') {
          steps {
            script {
              sh 'sleep 20'
            }
          }
        }

      }
    }

  }
}
